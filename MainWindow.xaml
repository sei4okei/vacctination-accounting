<Window x:Class="courseproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:courseproject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None"
        Title="" Height="1080" Width="1920" Loaded="Window_Loaded">
    <Grid>
        <Rectangle Height="85" VerticalAlignment="Top" Fill="#176594" MouseDown="DragRectangle_MouseDown"/>
        <Button Height="40" Width="100" Background="Red" HorizontalAlignment="Right" VerticalAlignment="Top" Content="X" Foreground="White" Click="ExitButton_Click"/>
        <Rectangle Height="995" VerticalAlignment="Top" Fill="#96CFF1" Margin="0,85,0,0"/>
        <Frame x:Name="mainFrame" Margin="300,85,0,0" NavigationUIVisibility="Hidden"/>
        <Frame x:Name="SideMenuFrame" HorizontalAlignment="Left" Height="995" Width="300" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
