<Page x:Class="courseproject.Pages.AddTabs.Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:courseproject.Pages.AddTabs"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1900"
      Title="Employee" Loaded="Page_Loaded">

    <StackPanel Orientation="Vertical" Margin="20">
        <Label Content="Имя:" Style="{StaticResource GeneralLabel}"/>
        <TextBox x:Name="FirstNameTextBox" Style="{StaticResource GeneralTextBox}" Height="45" Width="280" HorizontalAlignment="Left"/>
        <Label Content="Фамилия:" Style="{StaticResource GeneralLabel}"/>
        <TextBox x:Name="LastNameTextBox" Style="{StaticResource GeneralTextBox}" Height="45" Width="280" HorizontalAlignment="Left"/>
        <Label Content="Отчество:" Style="{StaticResource GeneralLabel}"/>
        <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource GeneralTextBox}" Height="45" Width="280" HorizontalAlignment="Left"/>
        <Label Content="Права доступа:" Style="{StaticResource GeneralLabel}"/>
        <ComboBox x:Name="PostComboBox" Style="{StaticResource GeneralComboBox}" Height="45" Width="280" HorizontalAlignment="Left"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Сохранить" Height="50" Width="175" HorizontalAlignment="Left" Style="{StaticResource LoginButton}" Click="SaveButton_Click" Margin="0, 65, 50, 65"/>
            <Button x:Name="DeleteButton" Content="Удалить" Height="50" Width="175" HorizontalAlignment="Left" Style="{StaticResource LoginButton}" Click="DeleteButton_Click" Margin="50, 65, 50, 65"/>
        </StackPanel>
    </StackPanel>
</Page>
