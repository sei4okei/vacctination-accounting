<Page x:Class="courseproject.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:courseproject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="995" d:DesignWidth="1620"
      Title="Add">

    <Grid>
        <TabControl>
            <TabItem Header="Пациент">
                <Frame x:Name="PatientFrame" Loaded="PatientFrame_Loaded"/>
            </TabItem>
            <TabItem Header="Врач">
                <Frame x:Name="EmployeeFrame" Loaded="EmployeeFrame_Loaded"/>
            </TabItem>
            <TabItem Header="Вакцина">
                <Frame x:Name="VaccineFrame" Loaded="VaccineFrame_Loaded"/>
            </TabItem>
            <TabItem Header="Участок">
                <Frame x:Name="RegionFrame" Loaded="RegionFrame_Loaded"/>
            </TabItem>
            <TabItem Header="Направление">
                <Frame x:Name="ReceiptionFrame" Loaded="ReceiptionFrame_Loaded"/>
            </TabItem>
            <TabItem Header="Аккаунт" x:Name="AccountTab">
                <Frame x:Name="AccountFrame" Loaded="AccountFrame_Loaded"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
